{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": false,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"es2021"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/CORSProxy/proxyServer.js", "src/proxy.ts"
    ]
}
